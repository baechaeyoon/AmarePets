<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
   <mapper namespace="mapper.board">
  
  <resultMap type="boardVO" id="boardResult">
  	<result property="level" column="lvl"/>
  	<result property="qaNo"  column="qa_No" />
  	<result property="qaParentNo"  column="qa_parentNo" />
  	<result property="qaTitle"  column="qa_title" />
  	<result property="qaCategory"  column="qa_category" />
  	<result property="qaContent"  column="qa_content" />
  	<result property="qaDate"  column="qa_date" />
  	<result property="userID"  column="user_ID" />
  	<result property="qaSecret" column="qa_secret" />
  </resultMap>
   
  <select id="selectAllBoardList" resultMap="boardResult">
  <![CDATA[
  	
 	 select * from (
		                select rownum as recNum, lvl
		                      ,qa_No
		                      ,qa_parentNo
		                      ,qa_title
		                      ,qa_category
		                      ,qa_content
		                      ,qa_date
		                      ,user_ID
		                      ,qa_secret
		                from (select level as lvl
		                              ,qa_No
		                              ,qa_parentNo
				                      ,qa_title
				                      ,qa_category
				                      ,qa_content
				                      ,qa_date
				                      ,user_ID
				                      ,qa_secret
		                        from q_board
		                        start WITH qa_parentNo=0              
		                        CONNECT by PRIOR qa_No=qa_parentNo 
		                        order SIBLINGS by qa_No desc
		                      )  
		            )
		where recNum BETWEEN (#{section}-1)*100+(#{pageNum}-1)*10+1 and (#{section}-1)*100+#{pageNum}*10
		
 
  ]]>
  </select>
  
  <select id="selectTotBoards" resultType="int">
		select count(qa_No) from q_board
	</select>
  
  <insert id="insertBoard" parameterType="java.util.Map">
  	<![CDATA[
  		insert into q_board (qa_No, qa_title, qa_category, qa_content, qa_secret, user_ID)

  		values (#{qa_No}, #{qa_title}, #{qa_category}, #{qa_content}, #{qa_secret}, #{user_ID})
  	]]>
  </insert>
  
  <select id="selectNewQa_No" resultType="int">
		<![CDATA[
			SELECT NVL(MAX(qa_No), 0) + 1 FROM q_board
		]]>
	</select>
  
  <delete id="deleteBoard" parameterType="Integer">
  		<![CDATA[
  			delete from q_board
  			where
  			qa_No=#{qa_No}
  		]]>
  	</delete>
  
  <select id="viewBoard" parameterType="Integer" resultType="boardVO">
  	<![CDATA[
  		select * from q_board
  		where 
  		qa_No=#{qa_No}
  	]]>
  </select>
  
  <update id="updateBoard" parameterType="java.util.Map" >
  	<![CDATA[
  		update q_board set
  			qa_title = #{qa_title},
  			qa_category = #{qa_category},
  			qa_content = #{qa_content},
  			qa_secret = #{qa_secret}
  		where qa_No = #{qa_No}
  	]]>
  </update>
  
  </mapper>